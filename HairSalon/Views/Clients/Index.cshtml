@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>All Clients</h1>

<div class="content">
@if (Model.Count == 0)
{
  <h3>There are currently no clients.</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
}
</div>

<ul class="menu-links">
  <li>@Html.ActionLink("Add a new client","Create")</li>
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>